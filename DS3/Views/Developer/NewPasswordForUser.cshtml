@model List<User>

@{
    ViewData["Title"] = "Изменить пароль";
}

<style> 
    body{
      background-color: #dedede;
    }

    

    .container {
      display: flex;
      justify-content: center;
      align-items: center;
    }
    
    .main {
      padding: 20px; /* Внутренний отступ блока */
      background-color: white;
      width: 700px;
    }
 
    .searchbox input { 
        width: 100%; 
        height: 100%; 
        box-sizing: border-box; 
        border: 2px solid black; /* Добавляем границу */ 
        border-radius: 20px; /* Делаем границы закругленными */ 
        outline: none; /* Убираем контур при фокусе */ 
        color: black; /* Цвет текста */ 
        padding-left: 20px; /* Добавляем отступ слева */ 
    } 
 
    .wrapper { 
        display: block; 
        width: 200px; 
        height: 40px; 
        line-height: 40px; 
        font-size: 18px; 
        font-family: sans-serif; 
        text-decoration: none; 
        color: #333; 
        border: 2px solid #333; 
        letter-spacing: 2px; 
        text-align: center; 
        padding-top: 0px; /*высота текста в кнопке*/ 
        position: relative; 
        transition: all .35s; 
        background-color: white; 
        position: absolute; 
        left: 50%; 
        transform: translate(-50%, -50%); 
    } 
 
    button:hover { 
        background-color: #dedede; 
        color: black; 
    } 
 
    button:hover:after { 
        width: 100%; 
    } 
</style> 

<div class="container">
    <div class="main">
        <h2>Изменить пароль</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form method="post">
        <div class="searchbox">
            <label>Пользователь</label>
            <div>
                <select name="userId">

                    <option value="0">---</option>

                    @foreach (var item in Model)
                    {
                        <option value="@item.Id">@item.Login</option>
                    }
                </select>
            </div>

            <br />

            <div>
                <label>Пароль</label>
                <input type="password" name="newPassword" />
            </div>

            <br />

            <div>
                <label>Подтвердите пароль</label>
                <input type="password" name="confNewPassword" />
            </div>

            <br />

            <br />
            <button type="submit" class="wrapper">Сохранить</button>
        </div>
            <br />

        </form>
    </div>
</div>