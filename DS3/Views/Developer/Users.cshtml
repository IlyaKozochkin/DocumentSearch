@model IEnumerable<User>

@{
    ViewData["Title"] = "Пользователи";
}

<div style="display: flex; justify-content: space-between;">
    <h1>Пользователи</h1>
    <div style="margin-top: 20px;">
        <a class="wrapper" asp-action="CreateUser">Добавить</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>@Html.DisplayNameFor(model => model.Password)</th>
            <th>Роль</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <th>@Html.DisplayFor(modelItem => item.FirstName)</th>
                <th>@Html.DisplayFor(modelItem => item.LastName)</th>
                <th>@Html.DisplayFor(modelItem => item.Password)</th>
                <th>@Html.DisplayFor(modelItem => item.Role.Name)</th>
                <th>
                    <a class="btn btn-sm btn-primary" asp-action="EditRoleUser" asp-route-userId="@item.Id">Управление ролью</a>
                </th>
                <th>
                    <a class="btn btn-sm btn-danger" asp-action="DeleteUser" asp-route-userId="@item.Id">Удалить пользователя</a>
                </th>
            </tr>
        }
    </tbody>
</table>