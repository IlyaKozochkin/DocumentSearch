@model EditDocumentViewModel

@using (Html.BeginForm("EditDocument", "Developer", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)

    <div class="row">
    <div class="col-md-4">
        <h2>Редактирование закона №@Model.Id</h2>
        <hr />
        
        <div class="form-floating">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required", minlength = "5"/*, pattern = "[^&quot;]+"*/ })

            @Html.LabelFor(m => m.Name)
        </div>

        <br />

        <div class="form-floating">
            @Html.DropDownList("typeDocId", ViewBag.TypeDocs as SelectList)
            <br />
        </div>

        <br />

        <div>
            @Html.TextAreaFor(m => m.KeyWords, new { @class = "form-control", rows = 12, required = "required", minlength = "10", placeholder = "Например: Федеральный закон от 15.11.1997 N 143-ФЗ (ред. от 03.08.2018) «Об актах гражданского состояния»" })
        </div>

        <br />
        <button type="submit" class="btn btn-primary">Обновить</button>
    </div>
</div>
}